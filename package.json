{
    "private": true,
    "license": "MIT",
    "workspaces": [
        "packages/*"
    ],
    "scripts": {



        "========================= Package Dev ========================": "",
        "web-desktop": "yarn workspace @next-dev/web-desktop start",
        "build-web-desktop": "yarn workspace @next-dev/web-desktop build",
        "web-mobile": "yarn workspace @next-dev/web-mobile start",
        "build-web-mobile": "yarn workspace @next-dev/web-mobile build",

        "========================= Tool Dev ========================": "",
        "bootstrap": "node ./scripts/bootstrap.js",
        "sync:tnpm": "node -e 'require(\"./scripts/syncTNPM\")()'",
        "test": "umi-test",
        "test:coverage": "umi-test --coverage",
        "test:update": "umi-test --updateSnapshot",
        "update:deps": "yarn upgrade-interactive --latest",
        "tsc": "lerna run tsc --stream",
        "clean": "node ./scripts/clearBuild",
        "kill4000": "npx cross-port-killer 4000",

        "========================= Doc Dev ========================": "",
        "site": "dumi build",
        "start:doc": "cross-env NODE_OPTIONS='--max-old-space-size=8192' dumi dev",
        "build:es": "father-build",
        "build": "yarn clean && father-build && webpack --progress",
        "deploy": "yarn site && gh-pages -d ./dist",
        "lint": "eslint --cache --ext .js,.jsx,.ts,.tsx --format=pretty && ./packages && yarn lint:prettier",
        "lint:prettier": "prettier --check \"**/**.{js,jsx,tsx,ts,md,json}\" --end-of-line auto",
        "prettier": "prettier --write \"**/**.{js,jsx,tsx,ts,md,json}\"",
        "release": "node ./scripts/release.js",
        "size": "yarn build && size-limit"

    },
    "size-limit": [{
        "path": "dist/bundle.js",
        "limit": "10 KB"
    }],
    "browserslist": [
        "last 2 versions",
        "Firefox ESR",
        "> 1%",
        "ie >= 11"
    ],
    "devDependencies": {
        "@babel/core": "^7.8.3",
        "@babel/plugin-proposal-object-rest-spread": "^7.8.3",
        "@babel/preset-env": "^7.8.3",
        "@babel/preset-react": "^7.8.3",
        "@babel/preset-typescript": "^7.8.3",
        "@jsdevtools/npm-publish": "^1.2.0",
        "@size-limit/preset-big-lib": "^4.5.5",
        "@testing-library/react": "^11.0.2",
        "@testing-library/react-hooks": "^3.2.1",
        "@types/classnames": "^2.2.7",
        "@types/enzyme": "^3.10.3",
        "@types/history": "^4.7.7",
        "@types/jest": "^26.0.0",
        "@types/memoize-one": "^5.1.2",
        "@types/node": "^14.0.26",
        "@types/qs": "^6.9.4",
        "@types/react": "^16.9.17",
        "@types/react-copy-to-clipboard": "^4.3.0",
        "@types/react-dom": "^16.9.1",
        "@types/react-helmet": "^6.0.0",
        "@types/react-intl": "^3.0.0",
        "@types/react-responsive": "^8.0.1",
        "@types/react-router-dom": "^5.1.0",
        "@types/warning": "^3.0.0",
        "@umijs/babel-preset-umi": "^3.0.14",
        "@umijs/fabric": "^2.0.0",
        "@umijs/plugin-analytics": "^0.2.2",
        "@umijs/test": "^3.2.10",
        "@umijs/test-utils": "^3.2.10",
        "@umijs/utils": "^3.2.11",
        "antd": "^4.7.3",
        "babel-loader": "^8.1.0",
        "babel-plugin-import": "^1.12.2",
        "body-parser": "^1.18.2",
        "chalk": "^4.1.0",
        "classnames": "^2.2.6",
        "cross-env": "^7.0.0",
        "cross-port-killer": "^1.1.1",
        "css-loader": "^4.2.2",
        "del": "^5.1.0",
        "dumi": "^1.0.36",
        "enzyme": "^3.11.0",
        "enzyme-to-json": "^3.4.3",
        "eslint": "^7.2.0",
        "father-build": "^1.18.1",
        "gh-pages": "^3.1.0",
        "glob": "^7.1.6",
        "hox": "^1.1.2",
        "jest": "^26.2.2",
        "jest-fetch-mock": "^3.0.3",
        "jsdom": "^16.4.0",
        "jsdom-global": "^3.0.2",
        "lerna": "^3.22.1",
        "less": "^4.1.1",
        "less-loader": "^7.0.1",
        "lint-staged": "^10.0.2",
        "lodash": "^4.17.20",
