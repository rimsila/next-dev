{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "esnext",
    "moduleResolution": "node",
    "jsx": "preserve",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": false,
    "suppressImplicitAnyIndexErrors": true,
    "declaration": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "removeComments": true,
    "paths": {
      "@wetrial/core": ["./packages/core/src/index.tsx"],
      "@wetrial/component": ["./packages/component/src/index.tsx"],
      "@wetrial/hooks": ["./packages/hooks/src/index.tsx"]
    }
  },
  "include": [
    "**/src",
    "**/docs",
    "scripts",
    "**/demos",
    "**/mock",
    ".eslintrc.js",
    "tests",
    "jest.config.js",
    "**/fixtures",
    "typings.d.ts",
    "firebase.ts",
    "webpack.config"
  ]
}
